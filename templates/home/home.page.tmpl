{{template "base" .}}

{{define "content"}}
<style>
    /* Solución para el logo dual:
      - Usamos !important para anular la clase 'd-block' de Bootstrap.
    */
    .logo-dark {
        display: none !important;
    }
    .dark-mode .logo-light {
        display: none !important;
    }
    .dark-mode .logo-dark {
        display: block !important;
    }

    /* Estilo para que la sección principal se adapte al modo oscuro */
    .hero-section-bg {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease;
    }
    .dark-mode .hero-section-bg {
        background-color: #1a1a1a !important;
    }
</style>

<!-- Hero Section - Simplificada y adaptativa -->
<section class="py-5 text-center hero-section-bg">
    <div class="container">
        <div class="row py-lg-4">
            <h1 class="fw-bold">Sistema de Gestión de Licitaciones</h1>
            <div class="col-lg-8 col-md-9 mx-auto">
                <img src="static/images/intevi-claro.png" alt="Logo de Intevi" 
                    class="mb-4 mx-auto d-block logo-light img-fluid" style="max-width: 400px;">
                
                <img src="static/images/intevi-oscuro.png" alt="Logo de Intevi en modo oscuro" 
                    class="mb-4 mx-auto d-block logo-dark img-fluid" style="max-width: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Main Content - Explicación de los módulos principales -->
<div class="album py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold">Módulos Principales</h2>
                <p class="lead">Este sistema está diseñado para controlar y documentar cada etapa del proceso a través de tres pilares fundamentales.</p>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <!-- Card 1: Catálogo (MODIFICADO) -->
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column text-center p-4 ">
                        <div class="mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#0d6efd" class="bi bi-book" viewBox="0 0 16 16">
                                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.823c-.908-.349-2.107-.69-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.347-.82 3.813-.948 1.465-.129 2.956.186 3.994.887a.5.5 0 0 0 .592 0c1.038-.701 2.53-.997 3.994-.887 1.465.128 2.93.548 3.813.948A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                            </svg>
                        </div>
                        <h4 class="card-title">Catálogo</h4>
                        <p class="card-text flex-grow-1">Gestione un catálogo completo de productos, incluyendo su clasificación, documentación, certificaciones y características técnicas.</p>
                        <div class="mt-4">
                            <a href="/catalogo" class="btn btn-outline-primary">Ir al Catálogo</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 2: Calendario (MODIFICADO) -->
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column text-center p-4">
                        <div class="mb-3">
                           <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#6f42c1" class="bi bi-calendar-week" viewBox="0 0 16 16">
                                <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                           </svg>
                        </div>
                        <h4 class="card-title">Calendario</h4>
                        <p class="card-text flex-grow-1">Visualice todas las fechas clave: juntas, propuestas, fallos y entregas en una vista unificada para no perder ningún detalle.</p>
                        <div class="mt-4">
                            <a href="/calendario" class="btn btn-outline-info">Ir al Calendario</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 3: Licitaciones -->
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column text-center p-4">
                        <div class="mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#ffc107" class="bi bi-file-earmark-text" viewBox="0 0 16 16">
                                <path d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z"/>
                                <path d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z"/>
                        </svg>
                        </div>
                        <h4 class="card-title">Licitaciones</h4>
                        <p class="card-text flex-grow-1">Administre el núcleo del proceso: partidas, requerimientos, aclaraciones, propuestas de competidores y la evaluación de fallos.</p>
                        <div class="mt-4">
                            <a href="/licitaciones" class="btn btn-outline-warning">Ver Licitaciones</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{end}}