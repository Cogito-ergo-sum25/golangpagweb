{{template "base" .}}

{{define "content"}}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Aclaraciones de la Licitación: {{.Data.Licitacion.Nombre}}</h2>
        <a href="/nueva-aclaracion-general/{{.Data.Licitacion.IDLicitacion}}" class="btn verde flex-shrink-0">
            <i class="fas fa-plus me-2"></i>Nueva Aclaración
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header azul">
            <i class="fas fa-filter me-2"></i>Filtros de Búsqueda
        </div>
        <div class="card-body">
            <form id="filter-form" class="row g-3 align-items-end">
                <div class="col-12 col-lg-6">
                    <label for="keyword-search" class="form-label">Buscar por palabra clave</label>
                    <input type="text" class="form-control" id="keyword-search" placeholder="Escribe algo de la pregunta u observación...">
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <label for="company-filter" class="form-label">Filtrar por empresa</label>
                    <select id="company-filter" class="form-select">
                        <option value="all" selected>Todas las empresas</option>
                        {{range .Data.EmpresasUnicas}}
                            <option value="{{.Nombre}}">{{.Nombre}}</option>
                        {{end}}
                    </select>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <label for="ficha-search" class="form-label">Buscar por Ficha Técnica ID</label>
                    <input type="text" class="form-control" id="ficha-search" placeholder="ID de ficha...">
                </div>
                 <div class="col-12 col-md-6 col-lg-3">
                    <label for="tipo-pregunta-filter" class="form-label">Tipo de pregunta</label>
                    <select id="tipo-pregunta-filter" class="form-select">
                        <option value="all" selected>Todas</option>
                        <option value="true">Técnica</option>
                        <option value="false">Legal / Administrativa</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    {{range .Data.Partidas}}
        <div class="partida-container mb-4">
            <h4 class="mb-3">Partida #{{.NumPartidaConvocatoria}}: {{.NombreDescripcion}}</h4>
            
            {{$aclaraciones := index $.Data.AclaracionesPorPartida .IDPartida}}

            <div class="accordion" id="accordion-partida-{{.IDPartida}}">
                {{range $aclaraciones}}
                <div class="accordion-item" 
                     data-empresa="{{.Empresa.Nombre}}" 
                     data-texto="{{.Pregunta}} {{.Observaciones}}" 
                     data-ficha="{{.FichaTecnicaID}}"
                     data-tecnica="{{.PreguntaTecnica}}">
                    <h2 class="accordion-header" id="heading-{{.IDAclaracionLicitacion}}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{.IDAclaracionLicitacion}}" aria-expanded="false">
                            <span class="fw-bold">{{.Pregunta}}</span>
                        </button>
                    </h2>
                    <div id="collapse-{{.IDAclaracionLicitacion}}" class="accordion-collapse collapse" data-bs-parent="#accordion-partida-{{.IDPartida}}">
                        <div class="accordion-body">
                             <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Empresa:</strong> {{.Empresa.Nombre}}</li>
                                <li class="list-group-item"><strong>Observaciones:</strong> {{.Observaciones}}</li>
                                <li class="list-group-item"><strong>Ficha Técnica ID:</strong> {{if .FichaTecnicaID}}{{.FichaTecnicaID}}{{else}}N/A{{end}}</li>
                                <li class="list-group-item"><strong>Puntos Técnicos Modif. ID:</strong> {{if ne .IDPuntosTecnicosModif 0}}{{.IDPuntosTecnicosModif}}{{else}}N/A{{end}}</li>
                                <li class="list-group-item"><strong>Tipo:</strong> {{if .PreguntaTecnica}}Técnica{{else}}Legal / Administrativa{{end}}</li>
                             </ul>
                             <div class="mt-3 text-end border-top pt-3">
                                     <a href="/editar-aclaracion/{{.IDAclaracionLicitacion}}" class="btn btn-sm btn-outline-primary azul">
                                         <i class="fas fa-edit me-1"></i> Editar
                                     </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="alert alert-secondary small">No hay aclaraciones para esta partida.</div>
                {{end}}
            </div>
        </div>
    {{end}}
</div>
{{end}}

{{define "js"}}
<script>
document.addEventListener('DOMContentLoaded', function () {
    // 1. Obtener referencias a TODOS los filtros
    const keywordInput = document.getElementById('keyword-search');
    const companySelect = document.getElementById('company-filter');
    const fichaInput = document.getElementById('ficha-search'); // <-- NUEVO
    const tipoPreguntaSelect = document.getElementById('tipo-pregunta-filter'); // <-- NUEVO
    
    const accordionItems = document.querySelectorAll('.accordion-item');

    function filterAclaraciones() {
        // 2. Leer los valores de los nuevos filtros
        const keyword = keywordInput.value.toLowerCase().trim();
        const company = companySelect.value;
        const fichaId = fichaInput.value.trim(); // <-- NUEVO
        const tipoPregunta = tipoPreguntaSelect.value; // <-- NUEVO

        accordionItems.forEach(item => {
            // 3. Obtener los nuevos data-attributes del item
            const itemCompany = item.getAttribute('data-empresa');
            const itemText = item.getAttribute('data-texto').toLowerCase();
            const itemFicha = item.getAttribute('data-ficha'); // <-- NUEVO
            const itemEsTecnica = item.getAttribute('data-tecnica'); // <-- NUEVO

            // 4. Crear las condiciones de match para cada filtro
            const companyMatch = (company === 'all' || itemCompany === company);
            const keywordMatch = (keyword === '' || itemText.includes(keyword));
            const fichaMatch = (fichaId === '' || itemFicha.includes(fichaId)); // <-- NUEVO
            const tecnicaMatch = (tipoPregunta === 'all' || itemEsTecnica === tipoPregunta); // <-- NUEVO

            // 5. El item se muestra SOLO SI todas las condiciones son verdaderas
            if (companyMatch && keywordMatch && fichaMatch && tecnicaMatch) {
                item.style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });
    }
    
    // 6. Asignar el evento a los nuevos filtros
    keywordInput.addEventListener('keyup', filterAclaraciones);
    companySelect.addEventListener('change', filterAclaraciones);
    fichaInput.addEventListener('keyup', filterAclaraciones); // <-- NUEVO
    tipoPreguntaSelect.addEventListener('change', filterAclaraciones); // <-- NUEVO
});
</script>
{{end}}