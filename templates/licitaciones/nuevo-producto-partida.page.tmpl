{{template "base" .}}
{{define "content"}}
<div class="container mt-4">

    <div class="card shadow-sm mb-4 border-start border-4 border-primary">
        <div class="card-body py-2 px-3">
            <div class="row align-items-center">
                <div class="col-md-1 text-center border-end">
                    <span class="text-muted small d-block">Partida</span>
                    <span class="h4 mb-0 fw-bold">#{{.Partida.NumPartidaConvocatoria}}</span>
                </div>
                <div class="col-md-5 border-end">
                    <span class="text-muted d-block" style="font-size: 0.75rem;">Descripción de la Convocatoria</span>
                    <span class="h8 mb-0 fw-bold">{{.Partida.NombreDescripcion}}</span>
                </div>
                <div class="col-md-2 border-end text-center">
                    <span class="text-muted d-block" style="font-size: 0.75rem;">Clave Compendio</span>
                    <span class="h8 mb-0 fw-bold">{{.Partida.ClaveCompendio}}</span>
                </div>
                <div class="col-md-2 border-end text-center">
                    <span class="text-muted d-block" style="font-size: 0.75rem;">Cantidad Solicitada</span>
                    <span class="h8 mb-0 fw-bold">{{.Partida.Cantidad}}</span> <small class="text-muted">{{.Partida.UnidadMedida}}</small>
                </div>
                <div class="col-md-2 text-center">
                    <span class="text-muted d-block" style="font-size: 0.75rem;">Ficha Técnica No.</span>
                    <span class="h8 mb-0 fw-bold">{{.Partida.NoFichaTecnica}}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex align-items-center justify-content-between">
            <span class="fw-bold">
                <i class="bi bi-box-seam me-2"></i>
                Proponer Productos para esta Partida
            </span>
            <button type="button" class="btn btn-success btn-sm" onclick="agregarProducto()">
                <i class="bi bi-plus-circle me-1"></i> Agregar Fila
            </button>
        </div>
        
        <form id="productos-form" method="POST" action="/nuevo-producto-partida">
            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
            <input type="hidden" name="id_partida" value="{{.Partida.IDPartida}}">
            
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="productos-table">
                        <thead class="table-light">
                            <tr>
                                <th width="50%">Producto Sugerido de Intevi</th>
                                <th width="20%">Precio Unitario Ofertado</th>
                                <th width="25%">Notas para Propuesta</th>
                                <th width="5%"></th>
                            </tr>
                        </thead>
                        <tbody id="productos-body">
                            <tr class="producto-row">
                                <td>
                                    <select class="form-select select2-buscable" name="productos[0][id_producto]" required>
                                        <option value="">Escribe para buscar equipo médico...</option>
                                        {{range .Productos}}
                                        <option value="{{.IDProducto}}">
                                            {{.Nombre}} — {{.Marca}} {{if .SKU}}({{.SKU}}){{end}}
                                        </option>
                                        {{end}}
                                    </select>
                                </td>
                                <td>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" class="form-control" name="productos[0][precio_ofertado]" required placeholder="0.00">
                                    </div>
                                </td>
                                <td>
                                    <textarea class="form-control form-control-sm" name="productos[0][observaciones]" rows="1" placeholder="Ej: Cumple con los accesorios..."></textarea>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="quitarFila(this)"><i class="fa-solid fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="/productos-partida/{{.Partida.IDPartida}}" class="btn btn-outline-danger">Cancelar</a>
                    <button type="submit" class="btn btn-primary verde px-4">
                        <i class="bi bi-check-circle me-1"></i> Confirmar Propuesta
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
let productoIndex = 1;

function inicializarSelect2(el) {
    $(el).select2({
        theme: 'bootstrap-5',
        dropdownParent: $(el).parent(),
        placeholder: 'Escribe nombre o marca...',
        allowClear: true
    });
}

$(document).ready(function() {
    inicializarSelect2('.select2-buscable');
});

function agregarProducto() {
    const tbody = document.getElementById('productos-body');
    const row = document.createElement('tr');
    row.className = 'producto-row';
    const currentIdx = productoIndex;

    row.innerHTML = `
        <td>
            <select class="form-select select2-buscable" name="productos[${currentIdx}][id_producto]" required>
                <option value="">Buscar por nombre, marca o SKU...</option>
                {{range .Productos}}
                <option value="{{.IDProducto}}">
                    {{.Nombre}} — {{.Marca}} {{if .SKU}}({{.SKU}}){{end}}
                </option>
                {{end}}
            </select>
        </td>
        <td>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" step="0.01" class="form-control" name="productos[${currentIdx}][precio_ofertado]" required placeholder="0.00">
            </div>
        </td>
        <td>
            <textarea class="form-control form-control-sm" name="productos[${currentIdx}][observaciones]" rows="1"></textarea>
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-sm btn-outline-danger" onclick="quitarFila(this)"><i class="fa-solid fa-trash"></i></button>
        </td>
    `;
    
    tbody.appendChild(row);
    inicializarSelect2(row.querySelector('.select2-buscable'));
    productoIndex++;
}

function quitarFila(btn) {
    const row = btn.closest('tr');
    $(row.querySelector('select')).select2('destroy');
    row.remove();
}
</script>
{{end}}