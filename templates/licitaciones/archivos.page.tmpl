{{template "base" .}}
{{define "content"}}
<div class="container mt-4">
    <div class="mb-3">
        <a href="/mostrar-partidas/{{.Licitacion.IDLicitacion}}" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver a Partidas
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fs-5"><i class="fa-solid fa-folder-open me-2"></i>Expediente: {{.Licitacion.NumContratacion}}</h4>
        </div>
        <div class="card-body">
            <div class="p-3 bg-light rounded border mb-4">
                <form action="/guardar-enlace-licitacion" method="POST" class="row g-2">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <input type="hidden" name="id_licitacion" value="{{.Licitacion.IDLicitacion}}">
                    
                    <div class="col-md-3">
                        <label class="small fw-bold">Nombre/Etiqueta</label>
                        <input type="text" name="nombre_archivo" class="form-control form-control-sm" placeholder="Ej: Registro Sanitario" required>
                    </div>
                    <div class="col-md-4">
                        <label class="small fw-bold">URL del Documento</label>
                        <input type="url" name="link_servidor" class="form-control form-control-sm" placeholder="https://..." required>
                    </div>
                    <div class="col-md-2">
                        <label class="small fw-bold">Tipo</label>
                        <input type="text" name="tipo_archivo" class="form-control form-control-sm" placeholder="Ej: .PDF, .ZIP">
                    </div>
                    <div class="col-md-3">
                        <label class="small fw-bold">Comentarios</label>
                        <input type="text" name="comentarios" class="form-control form-control-sm" placeholder="Opcional">
                    </div>
                    <div class="col-12 text-end mt-2">
                        <button type="submit" class="btn btn-primary verde btn-sm">Guardar en Expediente</button>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-secondary small">
                        <tr>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th class="d-none d-md-table-cell">Comentarios</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="small">
                        {{range .Archivos}}
                        <tr>
                            <td>
                                <div class="fw-bold">{{.NombreArchivo}}</div>
                                <a href="{{.LinkServidor}}" target="_blank" class="text-truncate d-inline-block" style="max-width: 200px; font-size: 0.7rem;">{{.LinkServidor}}</a>
                            </td>
                            <td><span class="badge bg-secondary">{{.TipoArchivo}}</span></td>
                            <td class="d-none d-md-table-cell">{{.Comentarios}}</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="{{.LinkServidor}}" target="_blank" class="btn btn-sm btn-outline-primary"><i class="fas fa-external-link-alt"></i></a>
                                    <form action="/eliminar-archivo-licitacion" method="POST" class="d-inline">
                                        <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                                        <input type="hidden" name="id_archivo" value="{{.IDArchivo}}">
                                        <input type="hidden" name="id_licitacion" value="{{.IDLicitacion}}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Â¿Eliminar enlace?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{end}}