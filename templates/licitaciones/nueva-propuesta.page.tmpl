{{template "base" .}}

{{define "content"}}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice-dollar me-2"></i>Nueva Propuesta para Partida #{{.Partida.NumPartidaConvocatoria}}</h2>
    </div>
    <div class="card shadow">
        <div class="card-header bg-primary text-white fw-bold azul">
            <i class="fas fa-info-circle me-1"></i> Información de la Propuesta
        </div>
        <div class="card-body">
            <form action="/nueva-propuesta/{{.Partida.IDPartida}}" method="POST">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <input type="hidden" name="id_partida" value="{{.Partida.IDPartida}}">
                
                <div class="mb-3">
                    <label for="producto-search" class="form-label">Buscar Producto Externo</label>
                    <div class="input-group">
                        <input type="search" id="producto-search" class="form-control" placeholder="Escribe el nombre o modelo del producto..." autocomplete="off">
                        <button type="button" class="btn btn-primary azul" title="Agregar nuevo producto" data-bs-toggle="modal" data-bs-target="#modalNuevoProducto">
                            <i class="fas fa-solid fa-plus me-1"></i> 
                            <span class="d-none d-md-inline">Agregar nuevo</span>
                        </button>
                    </div>
                    <div id="search-results" class="list-group position-relative" style="z-index: 1000;"></div>
                    <input type="hidden" name="id_producto_externo" id="id_producto_externo" required>
                    <input type="hidden" name="id_empresa" id="id_empresa">
                </div>

                <div class="mb-3">
                    <label class="form-label">Empresa</label>
                    <input type="text" id="empresa" class="form-control" disabled>
                </div>
                <div class="mb-3">
                    <label for="precio_ofertado" class="form-label">Precio Ofertado</label>
                    <input type="number" step="0.01" class="form-control" name="precio_ofertado" required>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="precio_min" class="form-label">Precio Mínimo</label>
                        <input type="number" step="0.01" class="form-control" name="precio_min">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="precio_max" class="form-label">Precio Máximo</label>
                        <input type="number" step="0.01" class="form-control" name="precio_max">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="observaciones" class="form-label">Observaciones</label>
                    <textarea class="form-control" name="observaciones" rows="3"></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/propuestas/{{.Partida.IDPartida}}" class="btn rojo"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" class="btn verde"><i class="fa-solid fa-floppy-disk"></i> Guardar Propuesta</button>
                </div>
            </form>


            <div class="modal fade" id="modalNuevoProducto" tabindex="-1" aria-labelledby="modalNuevoProductoLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <form action="/nuevo-producto-externo-contexto" method="POST">
                            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                            <input type="hidden" name="id_partida" value="{{.Partida.IDPartida}}">
                            <div class="modal-header">
                                <h5 class="modal-title fw-bold" id="modalNuevoProductoLabel">Nuevo Producto Externo</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="nombre" class="form-label">Nombre del Producto</label>
                                        <input type="text" class="form-control" name="nombre" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="modelo" class="form-label">Modelo</label>
                                        <input type="text" class="form-control" name="modelo" required>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="id_marca_modal" class="form-label">Marca</label>
                                        <div class="input-group">
                                            <select name="id_marca" id="id_marca_modal" class="form-select" required>
                                                <option value="">Selecciona una marca</option>
                                                {{range .Marcas}}
                                                <option value="{{.IDMarca}}">{{.Nombre}}</option>
                                                {{end}}
                                            </select>
                                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNuevaMarca" title="Agregar nueva marca">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="id_pais" class="form-label">País de Origen</label>
                                        <select name="id_pais_origen" class="form-select" required>
                                            <option value="">Selecciona un país</option>
                                            {{range .Paises}}
                                            <option value="{{.IDPais}}">{{.Nombre}}</option>
                                            {{end}}
                                        </select>
                                    </div>
                                    
                                    <div class="col-md-12">
                                        <label for="id_empresa_modal" class="form-label">Empresa Externa</label>
                                        <div class="input-group">
                                            <select name="id_empresa_externa" id="id_empresa_modal" class="form-select" required>
                                                <option value="">Selecciona una empresa</option>
                                                {{range .Empresas}}
                                                <option value="{{.IDEmpresa}}">{{.Nombre}}</option>
                                                {{end}}
                                            </select>
                                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNuevaEmpresa" title="Agregar nueva empresa">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <label for="observaciones_producto" class="form-label">Observaciones</label>
                                        <textarea name="observaciones" class="form-control" rows="2"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn rojo" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn azul">Guardar Producto</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modalNuevaMarca" tabindex="-1">
              <div class="modal-dialog">
                <div class="modal-content">
                  <form id="form-nueva-marca">
                    <div class="modal-header">
                      <h5 class="modal-title">Agregar Nueva Marca</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      <label for="input-nombre-marca" class="form-label">Nombre de la Marca</label>
                      <input type="text" class="form-control" name="nombre" id="input-nombre-marca" required>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn rojo" data-bs-dismiss="modal">Cancelar</button>
                      <button type="submit" class="btn verde">Guardar</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <div class="modal fade" id="modalNuevaEmpresa" tabindex="-1">
              <div class="modal-dialog">
                <div class="modal-content">
                  <form id="form-nueva-empresa">
                    <div class="modal-header">
                      <h5 class="modal-title">Agregar Nueva Empresa</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      <label for="input-nombre-empresa" class="form-label">Nombre de la Empresa</label>
                      <input type="text" class="form-control" name="nombre" id="input-nombre-empresa" required>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn rojo" data-bs-dismiss="modal">Cancelar</button>
                      <button type="submit" class="btn verde">Guardar</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

        </div>
    </div>
</div>
{{end}}

{{define "js"}}
<script>
document.addEventListener("DOMContentLoaded", function() {
    // -------------------------------------------------------------------
    // --- LÓGICA PARA EL BUSCADOR DE PRODUCTOS (SIN CAMBIOS) ---
    // -------------------------------------------------------------------
    const searchInput = document.getElementById("producto-search");
    const resultsContainer = document.getElementById("search-results");
    const productoIdInput = document.getElementById("id_producto_externo");
    const empresaIdInput = document.getElementById("id_empresa");
    const empresaDisplayInput = document.getElementById("empresa");

    let debounceTimer;
    function debounce(func, delay) {
        return function(...args) {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => { func.apply(this, args); }, delay);
        };
    }

    const search = async () => {
        const query = searchInput.value.trim();
        resultsContainer.innerHTML = ""; 
        if (query.length < 2) return;

        try {
            const response = await fetch(`/api/productos-externos/buscar?q=${encodeURIComponent(query)}`);
            if (!response.ok) throw new Error("Error en la respuesta del servidor");
            const productos = await response.json();

            if (productos.length === 0) {
                resultsContainer.innerHTML = '<div class="list-group-item list-group-item-light">No se encontraron productos.</div>';
            } else {
                productos.forEach(p => {
                    const item = document.createElement("a");
                    item.href = "#";
                    item.className = "list-group-item list-group-item-action";
                    item.innerHTML = `<strong>${p.nombre} - ${p.modelo}</strong> <small class="text-muted">(${p.marca.nombre}, ${p.pais_origen.nombre})</small>`;
                    item.dataset.id = p.id_producto;
                    item.dataset.nombre = `${p.nombre} - ${p.modelo}`;
                    item.dataset.empresaId = p.id_empresa_externa;
                    item.dataset.empresaNombre = p.empresa_externa.nombre;
                    resultsContainer.appendChild(item);
                });
            }
        } catch (error) {
            console.error("Error al buscar productos:", error);
        }
    };
    searchInput.addEventListener("input", debounce(search, 300));
    resultsContainer.addEventListener("click", function(e) {
        e.preventDefault();
        const target = e.target.closest("a.list-group-item-action");
        if (target) {
            searchInput.value = target.dataset.nombre;
            productoIdInput.value = target.dataset.id;
            empresaIdInput.value = target.dataset.empresaId;
            empresaDisplayInput.value = target.dataset.empresaNombre;
            resultsContainer.innerHTML = "";
        }
    });
    document.addEventListener("click", function(e) {
        if (!e.target.closest("#producto-search") && !e.target.closest("#search-results")) {
            resultsContainer.innerHTML = "";
        }
    });

    // -------------------------------------------------------------------
    // --- NUEVA LÓGICA PARA CREACIÓN RÁPIDA DE MARCAS Y EMPRESAS ---
    // -------------------------------------------------------------------
    const handleQuickAdd = async (form, targetDropdown, apiUrl, modalElement, nameField, idField) => {
        form.addEventListener("submit", async function(e) {
            e.preventDefault();
            const formData = new FormData(form);
            const csrfToken = document.querySelector('input[name="csrf_token"]').value;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'X-CSRF-Token': csrfToken },
                    body: new URLSearchParams(formData)
                });

                if (!response.ok) throw new Error("Falló la creación");

                const newItem = await response.json();

                const option = document.createElement('option');
                option.value = newItem[idField];
                option.textContent = newItem[nameField];
                
                targetDropdown.appendChild(option);
                targetDropdown.value = newItem[idField];

                form.reset();
                const modalInstance = bootstrap.Modal.getInstance(modalElement);
                modalInstance.hide();

            } catch (error) {
                console.error("Error en la creación rápida:", error);
                alert("No se pudo guardar el nuevo elemento.");
            }
        });
    };

    // Configurar para el modal de "Nueva Marca"
    const formMarca = document.getElementById('form-nueva-marca');
    const dropdownMarca = document.getElementById('id_marca_modal');
    const modalMarca = document.getElementById('modalNuevaMarca');
    handleQuickAdd(formMarca, dropdownMarca, '/api/marcas', modalMarca, 'nombre', 'id_marca');

    // Configurar para el modal de "Nueva Empresa"
    const formEmpresa = document.getElementById('form-nueva-empresa');
    const dropdownEmpresa = document.getElementById('id_empresa_modal');
    const modalEmpresa = document.getElementById('modalNuevaEmpresa');
    handleQuickAdd(formEmpresa, dropdownEmpresa, '/api/empresas-externas', modalEmpresa, 'nombre', 'id_empresa');
});
</script>
{{end}}