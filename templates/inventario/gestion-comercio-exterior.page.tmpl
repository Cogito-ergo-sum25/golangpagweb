{{template "base" .}}
{{define "content"}}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/inventario">Catálogo</a></li>
            <li class="breadcrumb-item"><a href="/editar-producto/{{.Producto.IDProducto}}">Editar Producto</a></li>
            <li class="breadcrumb-item active">Comercio Exterior</li>
        </ol>
    </nav>

    <div class="card shadow-lg border-0">
        <div class="card-header azul text-white">
            <h5 class="mb-0"><i class="fas fa-globe-americas me-2"></i> Configuración de Comercio Exterior: {{.Producto.Nombre}}</h5>
            <small>SKU: {{.Producto.SKU}} | Marca: {{.Producto.Marca}}</small>
        </div>
        
        <form method="POST" action="/producto/comercio-exterior/{{.Producto.IDProducto}}" class="needs-validation" novalidate>
            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
            
            <div class="card-body bg-light">
                <div class="row g-4">
                    <div class="col-md-12">
                        <h6 class="form-label fw-bold border-bottom pb-2">Información de Importación / Exportación</h6>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold small text-muted">Modelo</label>
                        <input type="text" class="form-control" name="modelo" value="{{.Producto.ComercioExterior.Modelo}}" placeholder="Modelo técnico">
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold small text-muted">Sub Modelo</label>
                        <input type="text" class="form-control" name="sub_modelo" value="{{.Producto.ComercioExterior.SubModelo}}" placeholder="Sub-modelo o variante">
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold small text-muted">Unidad de medida aduana</label>
                        <input type="text" class="form-control" name="unidad_medida_aduana" value="{{.Producto.ComercioExterior.UnidadMedidaAduana}}" placeholder="Ej. KG, PZA">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold small text-muted">Fracción arancelaria</label>
                        <select class="form-select" name="fraccion_arancelaria">
                            <option value="" {{if eq .Producto.ComercioExterior.FraccionArancelaria ""}}selected{{end}}>Sin seleccionar</option>
                            <option value="9018.90.99" {{if eq .Producto.ComercioExterior.FraccionArancelaria "9018.90.99"}}selected{{end}}>9018.90.99 - Instrumentos médicos</option>
                            </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold small text-muted">Factor de conversión UMT</label>
                        <div class="input-group">
                            <input type="number" step="0.0000000001" class="form-control text-end" name="factor_conversion_umt" 
                                   value="{{if .Producto.ComercioExterior.FactorConversionUMT}}{{.Producto.ComercioExterior.FactorConversionUMT}}{{else}}0.0000000000{{end}}">
                            <span class="input-group-text bg-white text-muted small">UMT</span>
                        </div>
                        <div class="form-text">Precisión requerida de hasta 10 decimales.</div>
                    </div>
                </div>
            </div>

            <div class="card-footer py-3 d-flex justify-content-between">
                <a href="/editar-producto/{{.Producto.IDProducto}}" class="btn azul px-4 text-white shadow-sm">
                    <i class="fas fa-arrow-left me-2"></i> Volver a Producto
                </a>
                <button type="submit" class="btn verde px-5 text-white shadow-sm">
                    <i class="fas fa-save me-2"></i> Guardar Comercio Exterior
                </button>
            </div>
        </form>
    </div>
</div>
{{end}}