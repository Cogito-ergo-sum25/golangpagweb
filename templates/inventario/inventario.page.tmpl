{{template "base" .}}
{{define "content"}}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Inventario de Productos</h2>
        <a name="" id="" class="btn btn-primary mt-3 btn-outline-success verde" href="/crear-producto" role="button">Agregar Producto</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Version</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{range .Productos}}
            <tr>
                <td>{{.SKU}}</td>
                <td>{{.Marca}}</td>
                <td>{{.Modelo}}</td>
                <td>{{.Version}}</td>
                <td>{{.Nombre}}</td>
                <td>
                    <a href="/editar-producto/{{.IDProducto}}" class="btn btn-sm btn-warning">Editar</a>
                    <form action="/eliminar/{{.IDProducto}}" method="POST" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{end}}
        </tbody>
    </table>
</div>
{{end}}